{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Project 1 (UnvisitedStones)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/CSharp/UnvisitedStones/bin/Debug/net8.0/UnvisitedStones.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CSharp/UnvisitedStones",
            "console": "internalConsole",
            "preLaunchTask": "build-unvisited-stones"
        },
        {
            "name": "Launch Project 2 (PangramChecker)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/CSharp/PangramChecker/bin/Debug/net8.0/PangramChecker.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CSharp/PangramChecker",
            "console": "internalConsole",
            "preLaunchTask": "build-pangram-checker"
        },
        {
            "name": "Launch Project 3 (DigitOps)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/CSharp/DigitOps/bin/Debug/net8.0/DigitOps.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CSharp/DigitOps",
            "console": "internalConsole",
            "preLaunchTask": "build-digit-ops"
        },
        {
            "name": "C++ Launch (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-cpp",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}